<!DOCTYPE html>
<html lang="en">
  <head>
    <title>SUSHI2GO | View Order</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/nav.scss" />
    <script src="../public/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body class="main-order">
    <%- include('partials/nav') %>
  </body>

  <main class="order">
    <h2>View Order</h2>
    <section class="user-order-history">
      <% orderHistory.forEach(order=> { %>
      <ul>
        <span >This is you're Order number: <%= order.id %></span>
        <br>
        <span class="subbed">Status: <%= order.status %></span>
      </ul>
      <% }); %>
    </section>
    <div class="order-container">
      <section class="order-details">
        <h2>Order</h2>
      </section>
      <button id="send-order">Place Order</button>
    </div>
  </main>
</html>
