<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.scss">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <title>SUSHI2GO | Menu</title>
</head>

<body class="main-page">
  <%- include('partials/nav') %>

    <main class="menu-container">
      <div class="menu-title">
        <h1>Menu <span class="click-count"></span></h1>
        <button class="menu-order"><a href="/order">Order Now!</a></button>
      </div>
      <div class="menu">
        <% items.forEach(function(item) { %>
          <div class="menu-items">

            <h2>
              <%= item.name %>
            </h2> <span>
              <%= item.cost %>
            </span>
            <img src="<%= item.image %>" alt="<%= item.name %>">
            <div class="button-item-container">
              <button class="add" value="<%= JSON.stringify(item) %>">ADD +</button>
              <button class="remove" value="<%= JSON.stringify(item) %>">Remove</button>
            </div>
          </div>
          <% }); %>

      </div>
    </main>

</body>

</html>
